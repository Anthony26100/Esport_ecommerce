{% extends 'base.html.twig' %}

{% block title %}
	Home Produits |
	{{ parent() }}
{% endblock %}

{% block body %}
	<pre>
	{{ dump(produits) }}
</pre>

	<div class="example-wrapper">
		<h1>Hello Produits!s âœ…</h1>
		{% for produit in produits %}
			{% include "Backend/Produits/_delete.html.twig" %}
			<div class="form-check form-switch">
				<h2>{{ produit.categories }}
				</h2>
				{% for categorie in produit.categories %}
					{# <p>{{ categorie.titre }}</p> #}
				{% endfor %}


				<input class="form-check-input" type="checkbox" role="switch" value="{{ produit.id }}" {{ produit.active ? 'checked' }} data-switch-active-produits>
				<label class="form-check-label">Actif</label>
			</div>
			{% include "Backend/Produits/_form.html.twig" %}
		{% endfor %}

	</div>
{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('admin') }}
	{{ encore_entry_script_tags('app') }}
{% endblock %}
