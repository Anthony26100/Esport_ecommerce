{% extends "base.html.twig" %}

{% block title %}
	Création d'un produit
{% endblock %}

{% block body %}
	<h1>Nouveau produit</h1>

	{{ form_start(form) }}

	{{ form_errors(form) }}

	<div class="row">
		<div class="col">
			{{ form_row(form.titre) }}
			{{ form_row(form.prix) }}
			{{ form_row(form.imageFile) }}

		</div>
		<div class="col">

			{{ form_row(form.categories) }}
			{{ form_row(form.description) }}
			{{ form_row(form.active) }}
		</div>
	</div>

	<button type="submit" class="btn btn-success shadow rounded mb-4">
		<i class="fas fa-save"></i>
		Créer le produit
	</button>

	{{ form_end(form) }}
{% endblock %}
