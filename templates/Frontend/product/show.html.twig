{% extends "base.html.twig" %}

{% block title %}
	Page de
	{{ product.titre }}
{% endblock %}

{% block body %}

	<h1>
		{{ product.titre }}
		({{ product.prix / 100 }}
		â‚¬)
	</h1>

	<div class="row mb-5">
		<div class="col-4">
			<img class="img-fluid shadow rounded w-100" src="{{ vich_uploader_asset(product,'imageFile') }}" alt="Image de {{ product.titre }}">

		</div>
		<div class="col">
			<span
				class="badge bg-info shadow rounded">{# {{ product.categories.titre }} #}
			</span>
			<p>{{ product.description }}</p>
			<a href="{{ path('cart_add', {'id': product.id, 'returnToCart': true}) }}" class="btn btn-success shadow rounded">
				<i class="fas fa-shopping-cart"></i>
				Ajouter au panier
			</a>
		</div>
	</div>
{% endblock %}
