{% extends "base.html.twig" %}

{% block title %}
	Page de
	{{ product.titre }}
{% endblock %}

{% block body %}


	<section class="container mt-5">

		<h1 class="">
			{{ product.titre }}
			({{ product.prix / 100 }}
			â‚¬)
		</h1>

		<div class="row">
			<div class="col-md-9">
				<img class="img-fluid shadow rounded w-100" src="{{ vich_uploader_asset(product,'imageFile') }}" alt="Image de {{ product.titre }}">
			</div>
			<div class="col">
				<span class="badge bg-info shadow rounded">{{ product.titre }}
				</span>
				<p>{{ product.description }}</p>
				<a href="{{ path('cart_add', {'id': product.id, 'returnToCart': true}) }}" class="btn btn-success shadow rounded">
					<i class="fas fa-shopping-cart"></i>
					Ajouter au panier
				</a>
			</div>
		</div>
	</section>

{% endblock %}
